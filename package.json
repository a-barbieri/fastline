{
  "name": "fastline",
  "version": "1.0.0",
  "description": "A platform as a service to setup the website lifecycle",
  "main": "./lib/bundle.js",
  "files": [
    "/lib",
    "/templates"
  ],
  "scripts": {
    "prepublish": "rollup --config",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "changelog:init": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release:init": "npm run standard-changelog:init && npm run changelog:init",
    "release:tag": "npm run changelog && npm run standard-version",
    "test": "jest",
    "standard-changelog:init": "standard-changelog --first-release",
    "standard-version": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-barbieri/fastline.git"
  },
  "keywords": [
    "paas",
    "docker",
    "bitbucket",
    "microservices",
    "pipeline",
    "continuous-integration",
    "continuous-delivery"
  ],
  "author": "info@alessandrobarbieri.net",
  "license": "GNU GPL",
  "bugs": {
    "url": "https://github.com/a-barbieri/fastline/issues"
  },
  "homepage": "https://github.com/a-barbieri/fastline#readme",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/runtime-corejs3": "^7.8.4",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-jest": "^25.1.0",
    "conventional-changelog-cli": "^2.0.31",
    "core-js": "3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "^3.1.0",
    "jest": "^25.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "rollup": "^1.31.0",
    "rollup-plugin-babel": "^4.3.3",
    "standard-changelog": "^2.0.21",
    "standard-version": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "inquirer": "^7.0.4",
    "rimraf": "^3.0.2",
    "uuidv4": "^6.0.2"
  }
}
